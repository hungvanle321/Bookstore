@page
@model RegisterModel
@{
	ViewData["Title"] = "Register";
	Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>Register</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
	<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
	<style>
		.gradient-custom {
			/* fallback for old browsers */
			background: #6a11cb;
			/* Chrome 10-25, Safari 5.1-6 */
			background: -webkit-linear-gradient(to right, rgba(106, 17, 203, 1), rgba(37, 117, 252, 1));
			/* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
			background: linear-gradient(to right, rgba(106, 17, 203, 1), rgba(37, 117, 252, 1))
		}

		.fa-stack:hover .fa-circle {
			opacity: 0.5;
			transition: transform 0.3s ease-in-out;
		}
	</style>
</head>
<body>
	<section class="vh-100 gradient-custom">
		<div class="container h-100">
			<div class="row d-flex justify-content-center align-items-center h-100">
				<div class="col-12 col-md-6 col-lg-6">
					<div class="card bg-dark text-white" style="border-radius: 1rem;">
						<form class="card-body px-5 text-center" id="registerForm" method="post" asp-route-returnUrl="@Model.ReturnUrl">
							<div class="mb-md-3 mt-md-4">
								<h2 class="fw-bold mb-2 text-uppercase">REGISTER</h2>
								<p class="text-white-50 mb-5">Create a new account</p>

								<div class="form-outline form-white mb-4">
									<input asp-for="Input.Username" placeholder="Name" class="form-control" aria-required="true" />
									<div class="text-start pt-1">
										<span asp-validation-for="Input.Username" class="text-danger"></span>
									</div>
								</div>

								<div class="form-outline form-white mb-4">
									<input asp-for="Input.Email" placeholder="Email" class="form-control" autocomplete="username" aria-required="true" />
									<div class="text-start pt-1">
										<span asp-validation-for="Input.Email" class="text-danger"></span>
									</div>
								</div>


								<div class="form-outline form-white mb-4">
									<input asp-for="Input.Password" placeholder="Password" class="form-control" autocomplete="new-password" aria-required="true" />
									<div class="text-start pt-1">
										<span asp-validation-for="Input.Password" class="text-danger"></span>
									</div>
								</div>
								<div class="form-outline form-white mb-4">
									<input asp-for="Input.ConfirmPassword" placeholder="Confirm password" class="form-control" autocomplete="new-password" aria-required="true" />
									<div class="text-start pt-1">
										<span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
									</div>
								</div>


								<div class="form-outline form-white mb-4">
									<select asp-for="Input.Role" asp-items="@Model.Input.RoleList" class="form-select" id="Input_Role">
										<option value="" disabled selected>--Select role--</option>
									</select>
								</div>

								<div>
									<button id="registerSubmit" type="submit" class="btn btn-outline-light btn-lg px-5">Register</button>
								</div>
							</div>

							<div>
								<p class="mb-0">
									Already have an account?
									<a class="text-white-50 fw-bold" asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">
										Log In
									</a>
								</p>
							</div>

						</form>
						<form id="external-account2" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal justify-content-center text-center mb-4">
							<button type="submit" name="provider" value="Facebook" class="bg-transparent border-0">
								<div class="fa-stack fa-lg">
									<i class="fa fa-circle fa-stack-2x" style="color: #3b5998;"></i>
									<i class="fab fa-facebook-f fa-stack-1x fa-inverse"></i>
								</div>
							</button>
							<a href="#!" class="fa-stack fa-lg mx-4">
								<i class="fa fa-circle fa-stack-2x" style="color: #e4405f;"></i>
								<i class="fab fa-twitter fa-stack-1x fa-inverse"></i>
							</a>
							<a href="#!" class="fa-stack fa-lg">
								<i class="fa fa-circle fa-stack-2x" style="color: #4285f4;"></i>
								<i class="fab fa-google fa-stack-1x fa-inverse"></i>
							</a>
						</form>
					</div>
				</div>
			</div>
		</div>
	</section>
	<partial name="_ValidationScriptsPartial" />
</body>
</html>
