@page
@model LoginModel

@{
	ViewData["Title"] = "Log in";
	Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>Log in</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
	<link rel="stylesheet" href="~/Bookstore.styles.css" asp-append-version="true" />
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
	<style>
		.gradient-custom {
			/* fallback for old browsers */
			background: #6a11cb;
			/* Chrome 10-25, Safari 5.1-6 */
			background: -webkit-linear-gradient(to right, rgba(106, 17, 203, 1), rgba(37, 117, 252, 1));
			/* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
			background: linear-gradient(to right, rgba(106, 17, 203, 1), rgba(37, 117, 252, 1))
		}
	</style>
</head>
<body>
	<section class="vh-100 gradient-custom">
		<div class="container h-100">
			<div class="row d-flex justify-content-center align-items-center h-100">
				<div class="col-12 col-md-8 col-lg-6 col-xl-5">
					<div class="card bg-dark text-white" style="border-radius: 1rem;">
						<form class="card-body p-5 text-center" id="account" method="post">
							<div class="mb-md-7 mt-md-6 pb-3">
								<h2 class="fw-bold mb-2 text-uppercase">LOGIN</h2>
								<p class="text-white-50 mb-2">Enter your login and password!</p>

								<div class="form-outline form-white mb-4 pt-4">
									<input asp-for="Input.Username" placeholder="Username" class="form-control" aria-required="true" />
									<div class="text-start pt-1">
										<span asp-validation-for="Input.Username" class="text-danger"></span>
									</div>
								</div>

								<div class="form-outline form-white mb-4">
									<input asp-for="Input.Password" placeholder="Password" class="form-control" aria-required="true" />
									<div class="text-start pt-1">
										<span asp-validation-for="Input.Password" class="text-danger"></span>
									</div>
								</div>

								<div class="d-flex justify-content-between">
									<div class="checkbox">
										<label asp-for="Input.RememberMe" class="form-label">
											<input class="form-check-input" asp-for="Input.RememberMe" />
											@Html.DisplayNameFor(m => m.Input.RememberMe)
										</label>
									</div>
									<p class="small pb-lg-2"><a id="forgot-password" asp-page="./ForgotPassword" class="text-white-50">Forgot password?</a></p>
								</div>
								<button id="login-submit" type="submit" class="btn btn-outline-light btn-lg px-5 my-2">Log in</button>



							</div>

							<p class="mb-0">
								Don't have an account?
								<a class="text-white-50 fw-bold" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">
									Sign Up
								</a>
							</p>
						</form>
						<form id="external-account2" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal justify-content-center text-center mb-4">
							<button type="submit" name="provider" value="Facebook" class="bg-transparent border-0">
								<div class="fa-stack fa-lg">
									<i class="fa fa-circle fa-stack-2x" style="color: #3b5998;"></i>
									<i class="fab fa-facebook-f fa-stack-1x fa-inverse"></i>
								</div>
							</button>
							<a href="#!" class="fa-stack fa-lg mx-4">
								<i class="fa fa-circle fa-stack-2x" style="color: #e4405f;"></i>
								<i class="fab fa-twitter fa-stack-1x fa-inverse"></i>
							</a>
							<a href="#!" class="fa-stack fa-lg">
								<i class="fa fa-circle fa-stack-2x" style="color: #4285f4;"></i>
								<i class="fab fa-google fa-stack-1x fa-inverse"></i>
							</a>
						</form>
					</div>
				</div>
			</div>
		</div>
	</section>
</body>
</html>
