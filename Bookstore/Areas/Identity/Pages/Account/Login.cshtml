@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-Z9YS5TZNJ6"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag() { dataLayer.push(arguments); }
        gtag('js', new Date());
        gtag('config', 'G-Z9YS5TZNJ6', {
            'page_path': window.location.pathname,
            'custom_map': {
                'dimension1': 'merchantId',
                'dimension2': 'orderId',
                'metric1': 'loading_time'
            }
        });

        gtag('set', {
            'merchantId': 'ABC',
            'orderId': '100'
        });
    </script>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/login.css" />
</head>

<body>
    <div class="container bg-white">
        <div class="form-container sign-in d-flex align-items-center justify-content-center flex-column">
            <div class="logo">
                <a href="/Customer">
                    <img src="~/images/home_banner/logo.png" alt="Logo">
                </a>
            </div>
            <form id="external-login-form" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="text-center col-8">
                <h1>Sign In</h1>
                <div class="social-icons d-flex justify-content-center align-items-center">
                    <button type="submit" name="provider" value="Facebook" class="bg-transparent border-0" data-toggle="tooltip" data-placement="top" title="Sign in with Facebook">
                        <i class="fa-brands fa-facebook-f"></i>
                    </button>
                    <button type="submit" name="provider" value="Twitter" class="bg-transparent border-0" data-toggle="tooltip" data-placement="top" title="Sign in with Twitter">
                        <i class="fa-brands fa-twitter"></i>
                    </button>
                    <button type="submit" name="provider" value="Google" class="bg-transparent border-0" data-toggle="tooltip" data-placement="top" title="Sign in with Google">
                        <i class="fa-brands fa-google"></i>
                    </button>
                    <button type="submit" name="provider" value="Microsoft" class="bg-transparent border-0" data-toggle="tooltip" data-placement="top" title="Sign in with Microsoft">
                        <i class="fa-brands fa-windows"></i>
                    </button>
                </div>
            </form>
            <form method="post" id="signin-form" class="mx-5 text-center col-8">
                <span>or use your email password</span>
                <input asp-for="Input.Username" placeholder="Username" class="form-control" aria-required="true" />
                <div class="col-12 d-flex justify-content-start">
                    <span asp-validation-for="Input.Username" class="text-danger text-start"></span>
                </div>
                <input asp-for="Input.Password" placeholder="Password" class="form-control" aria-required="true" />
                <div class="col-12  d-flex justify-content-start">
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                
                <div class="justify-content-between col-12 align-items-center small-text">
                    <div class="d-flex align-items-center">
                        <label asp-for="Input.RememberMe" class="form-label d-flex align-items-center m-0">
                            <input type="checkbox" asp-for="Input.RememberMe" />
                        </label>
                        <div class="ps-2 small">Remember me</div>
                    </div>
                    
                    <p class="small"><a id="forgot-password" asp-page="./ForgotPassword">Forgot password?</a></p>
                </div>
                <a class="small-screen-signup" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Sign Up</a>
                <button class="submit-button" type="submit">Sign In</button>
            </form>
        </div>
        <div class="toggle-container">
            <div class="toggle">
                <div class="toggle-panel toggle-right">
                    <h2>Welcome to HLBookstore!</h2>
                    <p>Register with your personal details to use all of site features</p>
                    <a class="hidden" id="register" href="/Identity/Account/Register?returnUrl=%2F">Sign Up</a>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>

    <script>
        $(document).ready(function () {
            $('[data-toggle="tooltip"]').tooltip();
        });

        if (window.performance) {
            var timeSincePageLoad = Math.round(performance.now());
            gtag('set', {
                'loading_time': timeSincePageLoad
            });
        }
    </script>
</body>

</html>