@{
	ViewData["Title"] = "Book Management";
}
<div class="container pb-3 book_management_page">
	<div class="d-flex mt-4 mb-2 justify-content-between align-items-center">
		<div class="text-dark fw-bold fs-2">Book List</div>		
		<a asp-controller="Book" asp-action="CreateAndEdit" class="btn btn-dark d-flex fw-bold">
			<i class="bi bi-plus-circle me-2"></i> 
			<span class="d-none d-md-block">Create New Book</span>
			<span class="d-block d-md-none">Create</span>
		</a>
	</div>
	<table id="bookTable" class="table hover w-100">
		<thead>
			<tr>
				<th>Title</th>
				<th>Author</th>
				<th>Publisher</th>
				<th>Language</th>
				<th>Price</th>
				<th>Category</th>
				<th></th>
			</tr>
		</thead>
	</table>
</div>

@section Scripts{
	<script src="~/js/bookDataTable.js"></script>
	<script>
		$(function () {
			$('[data-toggle="tooltip"]').tooltip();
		});
	</script>
}

