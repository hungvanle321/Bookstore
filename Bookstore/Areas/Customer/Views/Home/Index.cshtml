@{
	ViewData["Title"] = "Home Page";
}
<div id="myCarousel" class="carousel slide banner-main" data-bs-ride="carousel">
	<div class="carousel-inner">
		<div class="carousel-item active">
			<img class="first-slide" src="~/images/home_banner/banner1.jpg" alt="First slide">
			<div class="container">
				<div class="carousel-caption relative">
					<h1>Embark on a Literary <br> Journey</h1>
					<p>
						Step into our bookstore and embark on a literary journey. <br>
						Discover new worlds, meet fascinating characters, and explore intriguing stories. <br>
						Our books are your passport to countless adventures.
					</p>
					<div class="button_section"> <a class="main_bt" href="#">Discover</a>  </div>
					<ul class="locat_icon">
					</ul>
				</div>
			</div>
		</div>
		<div class="carousel-item">
			<img class="second-slide" src="~/images/home_banner/banner2.jpg" alt="Second slide">
			<div class="container">
				<div class="carousel-caption relative">
					<h1>Unleash Your Imagination with Our New <br> Arrivals</h1>
					<p>
						Every week, we bring in a fresh selection of books for you to explore. <br>
						Unleash your imagination with the latest bestsellers, critically acclaimed novels, and undiscovered gems.
					</p>
					<div class="button_section"> <a class="main_bt" href="#">Discover</a>  </div>
					<ul class="locat_icon">
					</ul>
				</div>
			</div>
		</div>
		<div class="carousel-item">
			<img class="third-slide" src="~/images/home_banner/banner3.jpg" alt="Third slide">
			<div class="container">
				<div class="carousel-caption relative">
					<h1>We Deliver Your Favorite Books to Your <br> Doorstep</h1>
					<p>
						Enjoy the convenience of getting your favorite books delivered right to your doorstep. <br>
						With our free city-wide delivery service, you can stay in the comfort of your home and still indulge in your love for reading.
					</p>
					<div class="button_section"> <a class="main_bt" href="#">Discover</a>  </div>
					<ul class="locat_icon">
					</ul>
				</div>
			</div>
		</div>
		<div class="carousel-item">
			<img class="third-slide" src="~/images/home_banner/banner4.jpg" alt="Fourth slide">
			<div class="container">
				<div class="carousel-caption relative">
					<h1>Gift a Book - Gift Knowledge</h1>
					<p>
						Looking for the perfect gift? Give the gift of knowledge with our wide range of books. <br>
						From thrilling mysteries to insightful biographies, you`ll find the perfect book for everyone on your list.
					</p>
					<div class="button_section"> <a class="main_bt" href="#">Discover</a>  </div>
					<ul class="locat_icon">
					</ul>
				</div>
			</div>
		</div>
	</div>
	<a class="carousel-control-prev" href="#myCarousel" role="button" data-bs-slide="prev">
		<span class="carousel-control-prev-icon" aria-hidden="true"></span>
	</a>
	<a class="carousel-control-next" href="#myCarousel" role="button" data-bs-slide="next">
		<span class="carousel-control-next-icon" aria-hidden="true"></span>
	</a>
</div>