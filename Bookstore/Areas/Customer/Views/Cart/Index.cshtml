@model ShoppingCartViewModel
@{
	ViewData["Title"] = "Shopping Cart";
}
@*Make input number up/down arrow dissapear*@
<style>
	input::-webkit-outer-spin-button,
	input::-webkit-inner-spin-button {
		-webkit-appearance: none;
		margin: 0;
	}

	input[type=number] {
		-moz-appearance: textfield;
	}
</style>

<form method="post">
	<div class="container py-2">
		<div class="row d-flex justify-content-center align-items-center h-100">
			<div class="col">

				<div class="table-responsive p-4">
					<table class="table">
						<thead>
							<tr>
								<th scope="col" class="h5">My Cart</th>
								<th scope="col">Category</th>
								<th scope="col" class="text-center">Quantity</th>
								<th scope="col">Price</th>
								<th scope="col" class="text-end">Subtotal</th>
								<th scope="col"></th>
							</tr>
						</thead>
						<tbody>
							@foreach (var shoppingCart in Model.ShoppingCarts)
							{
								<tr>
									<th scope="row">
										<div class="d-flex align-items-center">
											<a asp-controller="Home" asp-action="Details" asp-route-id="@shoppingCart.BookId">
												<img src="@shoppingCart.Book.ImageUrl" class="img-fluid rounded-3"
													 style="width: 120px; cursor: pointer;" alt="Book">
											</a>

											<div class="flex-column ms-4">
												<a class="mb-2 text-decoration-none" style="color:black; cursor: pointer;"
												   onmouseover="this.style.color='orange';"
												   onmouseout="this.style.color='black';"
												   asp-controller="Home" asp-action="Details" asp-route-id="@shoppingCart.BookId">@shoppingCart.Book.Title</a>
												<p class="mb-0 fw-light">@shoppingCart.Book.Author</p>
											</div>
										</div>
									</th>
									<td class="align-middle">
										<p class="mb-0" style="font-weight: 500;">@shoppingCart.Book.Category.CategoryName</p>
									</td>
									<td class="align-middle">
										<div class="d-flex flex-row justify-content-center">
											<button class="btn px-2"
													asp-action="CartCountDecrease" asp-route-applicationUserId="@shoppingCart.ApplicationUserId" asp-route-productId="@shoppingCart.BookId">
												<i class="bi bi-dash-lg"></i>
											</button>
											<input asp-for="@shoppingCart.Count" min="0" name="quantity" type="number"
												   class="form-control form-control-sm text-center" style="width: 50px;" />
											<button class="btn px-2" asp-action="CartCountIncrease" asp-route-applicationUserId="@shoppingCart.ApplicationUserId" asp-route-productId="@shoppingCart.BookId"><i class="bi bi-plus-lg"></i></button>
										</div>
									</td>
									<td class="align-middle">
										<p class="mb-0" style="font-weight: 500;">
											@shoppingCart.Book.DiscountPrice.ToString("c")
										</p>
									</td>
									<td class="text-end align-middle">
										<p class="mb-0" style="font-weight: 500;">
											@{
												double subTotal = shoppingCart.Book.DiscountPrice * shoppingCart.Count;
											}
											@subTotal.ToString("c")
										</p>
									</td>
									<td class="text-center align-middle">
										<a asp-action="RemoveCart" asp-route-applicationUserId="@shoppingCart.ApplicationUserId" asp-route-productId="@shoppingCart.BookId" class="btn btn-dark"><i class="bi bi-trash-fill text-white align-middle"></i></a>
									</td>
								</tr>
							}
						</tbody>
					</table>
				</div>

				<div class="card shadow-2-strong mb-5 mb-lg-0" style="border-radius: 16px;">
					<div class="card-body p-4">
						<div class="row justify-content-end mx-3">
							<div class="col-lg-4 col-xl-3 float-end">
								<div class="d-flex justify-content-between" style="font-weight: 500;">
									<p class="mb-2">Total</p>
									<p class="mb-2">@Model.GetOrderTotal().ToString("c")</p>
								</div>
							</div>
						</div>
						<div class="d-flex justify-content-between align-items-center mx-3">
							<a asp-area="Customer" asp-controller="Home" asp-action="Books" class="col-2 btn btn-outline-primary text-uppercase btn-sm"><small>Continue Shopping</small></a>

							<button type="button" class="col-1 btn btn-primary btn-block btn-lg">
								<div class="text-center">
									Checkout
								</div>
							</button>

						</div>

					</div>
				</div>

			</div>
		</div>
	</div>
</form>
