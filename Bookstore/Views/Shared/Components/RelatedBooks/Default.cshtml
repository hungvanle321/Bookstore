@model List<Book>
<div class="col-12 list-group list-group-horizontal text-nowrap overflow-auto">
	@foreach (var book in Model)
	{
		<img class="list-group-item list-group-item-action" src="@book.ImageUrl" title="@book.Title" data-book-id="@book.BookId">
	}
</div>

<script>
	$(document).ready(function () {
		$(".detail_page .related_books .list-group-item-action").click(function () {
			var bookId = $(this).data('book-id');
			window.location.href = '@Url.Action("Details", "Home", new { id = "" })' + '/' + bookId;
		});
	});
</script>
